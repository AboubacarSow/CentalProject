@model ResultProfileDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    string defaultImage = "https://www.kindpng.com/picc/m/21-214439_free-high-quality-person-icon-default-profile-picture.png";
}

<div class="text-center">
    <img src="@(!String.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl:defaultImage)" style="width:130px;height:130px;border-radius:50%" />

    <br />
</div>
<br />
<br />

<input class="form-control" asp-for="FirstName" type="text" readonly />
<br />
<label class="form-label">Soyad</label>
<input class="form-control" asp-for="LastName" type="text" readonly />
<br />

<label class="form-label">Email</label>
<input class="form-control" asp-for="Email" type="email" readonly />
<br />

<label class="form-label">Telefon Numarası</label>
<input class="form-control" asp-for="PhoneNumber" type="text" readonly />
<br />
<br />
<a asp-action="Update" asp-controller="Profile" asp-area="User" class="btn btn-outline-success"> <i class="fa fa-pen me-2"></i>Güncelle</a>


