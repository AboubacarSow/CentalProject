@model List<ResultMessageDto>;
@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Areas/Manager/Views/Layout/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>N°</th>
            <th>Adı</th>
            <th>Mail</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>Durum</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var message in Model){
            count++;
            <tr>
                <td>@count</td>
                <td>@message.FullName</td>
                <td>@message.Email</td>
                <td>@message.Subject</td>
                <td>
                    <button data-bs="#element-@message.Id" class="btn btn-primary">Message</button>
                </td>
                <td class="btn btn-info">@(message.IsRead==true? "Okundu": "Okunmadı")</td>
                <td>
                    <a asp-action="Delete" asp-controller="Message" asp-route-id="@message.Id" class="btn btn-danger"> Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

