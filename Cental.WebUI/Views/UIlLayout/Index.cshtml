    <!-- Topbar End -->
    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar sticky-top px-0 px-lg-4 py-2 py-lg-0">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="" class="navbar-brand p-0">
                    <h1 class="display-6 text-primary"><i class="fas fa-car-alt me-3"></i></i>Cental</h1>
                    <!-- <img src="img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto py-0">
                        <a asp-action="Index" asp-controller="Default" asp-area="" class="nav-item nav-link active">Ana Sayfa</a>
                        <a asp-action="About" asp-controller="Default" asp-area="" class="nav-item nav-link">Hakkımızda</a>
                        <a asp-action="Service" asp-controller="Default" asp-area="" class="nav-item nav-link">Hizmetlerimiz</a>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0">
                                <a  class="dropdown-item">Our Feature</a>
                                <a href="cars.html" class="dropdown-item">Our Cars</a>
                                <a href="team.html" class="dropdown-item">Our Team</a>
                                <a href="testimonial.html" class="dropdown-item">Testimonial</a>
                                <a href="404.html" class="dropdown-item">404 Page</a>
                            </div>
                        </div>
                        <a asp-action="Contact" asp-controller="Default" asp-area="" class="nav-item nav-link">İletişim</a>
                    </div>
                    @if(User.Identity is not null && User.Identity.IsAuthenticated)
                    {
                        <button onclick="logout()" class="btn btn-primary rounded-pill py-2 px-4 ms-2">Çıkış Yap</button>

                    }
                    else
                    {
                       <a asp-action="Index" asp-controller="Login" asp-area="User" class="btn btn-primary rounded-pill py-2 px-4 ms-2">Giriş Yap</a>

                    }
                    <script>
                       function logout(){
                           //There is an issue in this operation,it's very specific and only concerned the user role when we look at the 
                           //url here down. We have to generlize it 
                            let _url="@Url.Action("Logout","Login",new {area="User"})";
                                        Swal.fire({
                                title: "Emin Mısınız?",
                                text: "Çıkış Yapıyorsunuz şuan!",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#3085d6",
                                cancelButtonColor: "#d33",
                                confirmButtonText: "Evet",
                                cancelButtonText:"İptal"
                            }).then((result) => {
                                    if (result.isConfirmed) {
                                        fetch(_url,{
                                            method:'POST',
                                            headers:{
                                                    'content-Type':'application/json',
                                                    'Accept':'application/json'
                                            }
                                        }).then(response => response.json())
                                         .then(data =>{
                                                if (data.success) {
                                                    return Swal.fire({
                                                         title: "Çıkış Yapıldı",
                                                        text: data.message,
                                                        icon: "success",
                                                         timer: 1500
                                                    });
                                                }
                                                else{
                                                    return Swal.fire({
                                                        title:"Hata",
                                                        text:"Bir hata oluştu",
                                                        icon:"error",
                                                        timer:1000
                                                    });
                                                }
                                         }).then(() => {
                                            window.location.reload(); // Rafraîchir la page après logout
                                         });
                                    }
                            });                          
                       }
                                    
                                 
                           

                       
                    </script>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar & Hero End -->
     @RenderBody()
