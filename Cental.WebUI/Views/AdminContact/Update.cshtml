@model UpdateContactDto
@{
    ViewData["Title"] = "İletişim Güncelleme";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <label class="form-label">Adres</label>
    <input type="text" class="form-control" asp-for="@Model.Address" /><br />
    <label class="form-label">Telefon Numara</label>
    <input type="text" class="form-control" asp-for="@Model.Phone" />
    <br />
    <label class="form-label"> Email Adresi</label>
    <input type="text" class="form-control" asp-for="@Model.Email" />
    <br />
    <label class="form-label"> Konum</label>
    <input type="text" class="form-control" asp-for="@Model.MapUrl" />
    <br />

    <button class="btn btn-primary" type="submit"><i class="fa fa-plus-circle"></i> Kaydet</button>
</form>

