@model List<AssignRoleDto>
@{
    ViewData["Title"] = "Rol Atama Paneli";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post" >
    @for(int i = 0; i < Model.Count; i++)
    {
      <input type="hidden" asp-for="@Model[i].UserId"/>
      <input type="hidden" asp-for="@Model[i].RoleId"/>
      <input type="hidden" asp-for="@Model[i].RoleName" />

      <div class="form-check">
          <input class="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
      </div>
      <br />
        
    }
      <button class="btn btn-outline-primary">Rolleri Ata</button>
</form>

