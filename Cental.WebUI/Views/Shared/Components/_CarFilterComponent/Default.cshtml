<form method="post" class="filter-form" asp-action="FilterCars" asp-controller="Default">
    <div class="container mt-4">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.Brands" name="brand">
                        <option selected disabled>Marka Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.Gastypes" name="gas">
                        <option selected disabled>Yakıt Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.Geartypes" name="gear">
                        <option selected disabled>Vites Seçin</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" class="form-control" name="year" placeholder="En düşük model yılı" />
                </div>
            </div>
            <div class="col-md-1 d-flex align-items-center">
                <button class="btn btn-danger w-100" type="submit">Filtrele</button>
            </div>
        </div>
    </div>
</form>

